<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    tema base
    tema que se aplica despues de la splash screen
    -->
    <style name="Theme.Newsick" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--
    tema de la splash screen
    hereda de Theme.SplashScreen
    -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">#FFFFFF</item>

        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <item name="postSplashScreenTheme">@style/Theme.Newsick</item>
    </style>
</resources>